<div class="plugin__box">
    <button class="@ButtonClass" @onclick="@OnClicked">
        <span class="@ButtonIcon"></span>
    </button>

    <div class="plugin__info">
        <span class="plugin__name">@Value.Name</span>
        <span class="plugin_author">@Value.Author</span>
        <span class="plugin__version">@Value.Version</span>
    </div>
</div>

@code {

    [Parameter]
    public PluginDto Value { get; set; }

    [Parameter]
    public EventCallback<PluginDto> Clicked { get; set; }

    [Parameter]
    public string ButtonClass { get; set; } = "btn";

    [Parameter]
    public string ButtonIcon { get; set; } = "";

    private async Task OnClicked()
    {
        if (Clicked.HasDelegate)
        {
            await Clicked.InvokeAsync(Value);
        }
    }

}